// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  createdat DateTime @default(now())
}

model Tutor {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  createdat DateTime @default(now())
  classes   Class[]
}

model Stdnt {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  cpnum     Int      @default(0)
  createdat DateTime @default(now())
  classes   Class[]
  cpcodes   CPcode[]
}

model Class {
  id      Int      @id @default(autoincrement())
  yyyy    Int
  mm      Int
  dd      Int
  order   Int
  tutor   Tutor    @relation(fields: [tutorId], references: [id])
  stdnt   Stdnt?   @relation(fields: [stdntId], references: [id])
  tbook   Tbook?   @relation(fields: [tbookId], references: [id])
  tutorId Int
  stdntId Int?
  tbookId Int?
  fdbacks Fdback[]
}

model Tbook {
  id          Int      @id @default(autoincrement())
  type        String
  name        String
  description String
  createdat   DateTime @default(now())
  classes     Class[]
}

model CPcode {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  used      Boolean  @default(false)
  numclass  Int
  createdat DateTime @default(now())
  stdnt     Stdnt?   @relation(fields: [stdntId], references: [id])
  stdntId   Int?
}

model Fdback {
  id      Int    @id @default(autoincrement())
  class   Class  @relation(fields: [classId], references: [id])
  classId Int
  content String
}
